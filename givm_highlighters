ab drvi class ahb_driver extends uvm_driver#(ahb_sequenceitem);<CR><CR>`uvm_component_utils(ahb_driver)<CR><CR>ahb_sequenceitem pkt;<CR><CR>virtual ahb_inff intf;<CR><CR>function new(string name="ahb_driver",uvm_component parent=null);<CR><CR>super.new(name,parent);<CR><CR>endfunction<CR><CR>virtual function void build_phase(uvm_phase phase);<CR><CR>super.build_phase(phase);<CR><CR>pkt=ahb_sequenceitem::type_id::create("pkt");<CR><CR>if(!uvm_config_db#(virtual ahb_inff)::get(this,"","intf",intf))<CR><CR>`uvm_error("ahb_driver","Unable to access interface")<CR><CR>endfunction<CR><CR>endclass
ab endpk endpackage
